@using RocketShop.Framework.Extension
@typeparam TItem

@code {
    [Parameter]
    public IEnumerable<TItem>? Items { get; set; }
    [Parameter]
    public RenderFragment<TItem> ChildContent { get; set; }
}
@if (Items.HasData())
{
    @foreach (var item in Items!)
    {
        @ChildContent(item)
    }
}