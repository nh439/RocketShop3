@using RocketShop.Framework.Extension


@code {
    [Parameter]
    public bool Condition { get; set; }=true;
    [Parameter]
    public RenderFragment? YesOperation{ get; set; }
    [Parameter]
    public RenderFragment? NoOperation{ get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}

@if(Condition)
{
    if (YesOperation.IsNotNull())
    {
        @YesOperation
    }
    else
    {
        @ChildContent
    }
}
else
{
    if (NoOperation.IsNotNull())
    {
        @NoOperation
    }
}
