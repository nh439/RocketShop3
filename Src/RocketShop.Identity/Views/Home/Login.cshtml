<div class="row">
    <div class="col"></div>
    <div class="col">
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <h4 class="card-title">Rocket Shop</h4>
                <h5 class="card-subtitle mb-2 text-muted">Repair Shop</h5>
                <!form method="post">
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-address-card"></i>
                                </div>
                            </div>
                            <input id="Username" name="Username" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            <input id="Password" name="Password" type="password" class="form-control">
                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button name="submit" type="submit" class="btn btn-primary btn-block" asp-controller="home" asp-action="Login">Sign In</button>
                        <a name="btn" class="btn btn-warning btn-block" href="/home/GoogleLogin?returnUrl=" @ViewBag.ReturnUrl"><i class="google icon"></i>Sign In With Google</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>
